<div class="card" style="width: 18rem; height: 26rem;">
    <div class="card-header">
        Get user
    </div>

    <div class="card-body">
        <div class="form-group">
            <input type="text" class="form-control form-control-sm" id="getUserId" aria-describedby="userIdHelp" placeholder="Enter user id">
        </div>

        <br>

        <div class="form-group">
            <label for="inputName">Username</label>
            <input type="text" class="form-control form-control-sm" id="getName" aria-describedby="username" disabled>
        </div>

        <div class="form-group">
            <label for="inputEmail">Email adress</label>
            <input type="text" class="form-control form-control-sm" id="getEmail" aria-describedby="email" disabled>
        </div>

        <div class="form-group">
            <label for="inputPhone">Phone number</label>
            <input type="text" class="form-control form-control-sm" id="getPhone" aria-describedby="phone" disabled>
        </div>

        <div class="form-group">
            <label for="inputStatus">Status</label>
            <input type="text" class="form-control form-control-sm" id="getStatus" aria-describedby="status" disabled>
        </div>
    </div>
    <div class="card-footer text-muted">
        <button type="button" class="btn btn-primary" id="getUserBtn">Get user</button>
    </div>
</div>
